#include <iostream>

using namespace std;

int finger;
long long ans,cnt;
int main(){
	cin>>finger>>cnt;

	if(finger==1){
		ans=cnt*8;
	}
	else if(finger==2){
		if(cnt%2==1){
			ans=7+cnt/2*8;
		}
		else{
			ans=1+(cnt/2)*8;
		}
	}
	else if(finger==3){
		ans=2+cnt*4;
	}
	else if(finger==4){
		if(cnt%2==1){
			ans=5+cnt/2*8;
		}
		else{
			ans=3+(cnt/2)*8;
		}
	}
	else if(finger=5){
		ans=4+cnt*8;
	}
	cout<<ans;
	return 0;
}
