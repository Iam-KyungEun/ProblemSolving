#include <iostream>
#include <cmath>

using namespace std;

long long x,y;

int main(){
	ios_base::sync_with_stdio(false);
	cin.tie(NULL); cout.tie(NULL);

	int T;
	cin>>T;
	for(int tc=1;tc<=T;tc++){
		cin>>x>>y;
		long long dist = y-x;
		long long n=sqrt(dist);
		if(dist==n*n) cout<<2*n-1;
		else{
			// dist<n*n 인 상황
			if(dist>n*(n+1)) cout<<2*n+1;
			else cout<<2*n; 
		}
		cout<<"\n";
	}
	return 0;
}
